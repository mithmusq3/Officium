<html>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=ISO-8859-1">
    <title>MITHILESH K</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="icon" href="/images/logo.png" type="image/x-icon">
</head>
<header id="header">
    <img src="/images/logo2.png" alt="" style="height: 50px;">
    <div class="head-element" style="width:7%;text-align: center;">Officium</div>
    <div style="justify-content:space-between;width:80%;"></div>
    <div class="head-element" style="width:7%;text-align: center;"><a href="/sadmindash"
            style="color: black;text-decoration: none;">Home</a></div>
    <div class="head-element" style="width:7%;text-align: center;"><a href="/sadminlogout"
            style="color: black;text-decoration: none;">Logout</a></div>
    <div class="head-element" style="width:12%;text-align: center;margin-right: 5px;">
        <h3>Super Admin</h3>
    </div>
</header>

<div
    style="padding-bottom:30px;background-color: #DE9576;margin-top: 120px;margin-left: 4%;margin-right: 4%; border-radius: 5px 5px 5px 5px;background-color: #F8F5EC;">
    <div style="height:30px;"></div>
    <div class="idcollection"
    style="display:flex;flex-direction:column;justify-content:space-evenly;">
    <div style="display:flex; flex-direction:row;justify-content: space-evenly;">
        <span style="width:3%">
            
        </span>
        <span style="width:20%">
            <ui><span style="font-weight:bold;">Admin Name: </span>
            </ui>
        </span>
        <span style="width:20%">
            <ui><span style="font-weight:bold;">Admin Email: </span>
            </ui>
        </span>
        <span style="width:20%">
            <ui><span style="font-weight:bold;">Admin Number: </span>
            </ui>
        </span>
        <span style="width:20%">
            <ui><span style="font-weight:bold;">Number of Offers Posted:</span>
            </ui>
        </span>
        <span style="width:20%">
            <ui><span style="font-weight:bold;">Numbers of Applications recieved: </span>
            </ui>
        </span>
    </div>

</div>
    <% if (admins.length> 0) { %>
        <% admins.forEach(admin=> { %>
            <% offercounts.forEach(offercount=> { %>
                <% applycounts.forEach(applycount=> { %>
                    <% if (admin._id.equals(offercount._id )) { %>
                        <% if (admin._id.equals(applycount._id )) { %>

                            <div class="idcollection"
                                style="display:flex;flex-direction:column;justify-content:space-evenly;">
                                <div style="display:flex; flex-direction:row;justify-content:space-evenly;">
                                    <span style="width:5%">
            
                                    </span>
                                    <span style="width:20%">
                                        <ui> <%= admin.name %>
                                        </ui>
                                    </span>
                                    <span style="width:20%">
                                        <ui> <%= admin.email %>
                                        </ui>
                                    </span>
                                    <span style="width:20%">
                                        <ui> <%= admin.number %>
                                        </ui>
                                    </span>
                                    <span style="width:2%">
            
                                    </span>
                                    <span style="width:20%">
                                        <ui> <%= offercount.count %>
                                        </ui>
                                    </span>
                                    <span style="width:2%">
            
                                    </span>
                                    <span style="width:20%">
                                        <ui> <%= applycount.count %>
                                        </ui>
                                    </span>
                                </div>
       
                            </div>
                            <% } %>
                                <% } %>


                                    <% }) %>
                                        <% }) %>
                                            <% }) %>
                                                <% } %>
</div>

</html>