<html>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=ISO-8859-1">
    <title>MITHILESH K</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="icon" href="/images/logo.png" type="image/x-icon">
</head>
<header id="header">
    <img src="/images/logo2.png" alt="" style="height: 50px;">
    <div class="head-element" style="width:7%;text-align: center;">Officium</div>
    <div style="justify-content:space-between;width:80%;"></div>
    <div class="head-element" style="width:7%;text-align: center;"><a href="/sadmindash"
            style="color: black;text-decoration: none;">Home</a></div>
    <div class="head-element" style="width:7%;text-align: center;"><a href="/sadminlogout"
            style="color: black;text-decoration: none;">Logout</a></div>
    <div class="head-element" style="width:12%;text-align: center;margin-right: 5px;">
        <h3>Super Admin</h3>
    </div>
</header>

<div
    style="padding-bottom:30px;background-color: #DE9576;margin-top: 120px;margin-left: 4%;margin-right: 4%; border-radius: 5px 5px 5px 5px;background-color: #F8F5EC;">
    <div style="height:30px;"></div>
    <div class="idcollection" style="display:flex;flex-direction:column;justify-content:space-evenly;">
        <div style="display:flex; flex-direction:row;justify-content: space-evenly;">
            <span style="width:3%">

            </span>
            <span style="width:25%">
                <ui><span style="font-weight:bold;"> User Name:</span>
                </ui>
            </span>
            <span style="width:25%">
                <ui> <span style="font-weight:bold;"> User Email:</span>
                </ui>
            </span>
            <span style="width:25%">
                <ui><span style="font-weight:bold;">  User Gender:</span>
                </ui>
            </span>
            <span style="width:25%">
                <ui> 
                    <span style="font-weight:bold;"> Number of offers Applied:</span>
                    
                </ui>
            </span>
        </div>
    </div>
    <% if (users.length> 0) { %>
        <% users.forEach(user=> { %>
            <a href="/profile/<%= user._id %>" style="cursor: pointer;text-decoration: none;color: black;">
                <div class="idcollection" style="display:flex;flex-direction:column;justify-content:space-evenly;">
                    <div style="display:flex; flex-direction:row;justify-content: space-evenly;">
                        <span style="width:5%">
            
                        </span>
                        <span style="width:25%">
                            <ui> <%= user.name %>
                            </ui>
                        </span>
                        <span style="width:25%">
                            <ui> <%= user.email %>
                            </ui>
                        </span>
                        <span style="width:25%">
                            <ui> <%= user.gender %>
                            </ui>
                        </span>

                    
                        <span style="width:25%">
                            <ui> 
                                <!-- <span style="font-weight:bold;"> Number of offers Applied:</span> -->
                                <%= user.no_offer %>
                            </ui>
                        </span>
                    </div>
                </div>
            </a>

            <% }) %>
                <% } %>
</div>

</html>