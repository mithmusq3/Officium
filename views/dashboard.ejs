<html>

    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=ISO-8859-1">
        <title><%= tittle %></title>
        <link rel="stylesheet" href="/styles.css">
        <link rel = "icon" href =  "/images/logo.png"   type = "image/x-icon">

    </head> 
    <header id="header">
      <img src="/images/logo2.png" alt="" style="height: 50px;">
      <div class="head-element" style="width:7%;text-align: center;">Officium</div> 
      <div style="justify-content:space-between;width:80%;"></div>  
      <div class="head-element" style="width:7%;text-align: center;" ><a href="/dashboard" style="color: black;text-decoration: none;">Home</a></div>
      <div class="head-element" style="width:7%;text-align: center;" ><a href="/logout" style="color: black;text-decoration: none;">Logout</a></div>
      <div class="head-element" style="width:10%;text-align: center;" > <%= user.name  %></div>
    </header>
    <body>
        <div id="attractive_cont">
            <div id="landing-cont-left" >

            </div>
            <img src="/images/off.jpg" alt="" id="main-pic" width="40%">
            <div id="landing-cont-right" style="flex-basis:100%">

            </div>
        </div>
        
        
        <% if (resumes.length > 0) { %>
          <% resumes.forEach(resume => { %>
                 <% if (user._id.equals(resume.userid)) { %>
                      <% condval = 1 %>
                      <% } %>
            <% }) %>
          <% } %>


          <div id="Header1">

          </div>
          
      <% if(condval == 1) {%>

        <div class="container">
          <% if (offers.length > 0) { %>
            <% offers.forEach(offer => { %>
              <a href="/user/<%= offer._id %>" style="cursor: pointer;text-decoration: none;color:black">
             
              <div class="arrange">
                <h2> <%= offer.company %> </h2>
                <h4 class="tittle"> Job Title:  <%= offer.tittle %></h4>
                <h4 class="tittle"> Type:  <%= offer.type %></h4>
                <p class="description"><%= offer.description %></p>
              </div>
            </a>

            <% }) %>
          <% } %>
        </div>

        <div id="Header2" style="margin-top:30px;">

        </div>

        <div class="container2">
            <div>1</div>
            <div> <%= condval %></div>
            <div>2</div>
            <div>3</div>
            <div>4</div>
            <div>5</div>
            <div>6</div>
            <div>7</div>
        </div>

        <span>
            <!-- <h2>Jobs Available</h2> -->
        </span>

        <% } else { %>
  
        <form action="/upload/<%= user._id %>" method="POST" enctype="multipart/form-data" >
          <input class="choose-file-btn" type="file" name="resume" />
          <input class="upload-btn" type="submit" value="Upload Resume" />    
        </form>

        <!-- <form action="/download/<%= user._id %>" method="GET">
          <input class="upload-btn" type="submit" value="Download" />    
        </form> -->

        <% } %>
    </body>
</html> 